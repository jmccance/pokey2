#!/bin/sh

set -e

cd "$(dirname "$0")/.."

scripts/update
echo

echo "==> Building client-side assets..."
(
  set -e
  cd client
  ./node_modules/.bin/gulp | sed -e 's/^/[gulp] /'
)
echo "==> Done!"
echo

echo "==> Building application..."
(
  set -e
  ./activator universal:stage
)
echo "==> Done!"
echo

echo "==> Releasing to Heroku"
heroku docker:release
echo "==> Done!"
